meta {
  name: UserPasswordForgot
  type: http
  seq: 6
}

post {
  url: {{host}}/auth/forgot-password
  body: json
  auth: none
}

body:json {
  {
    "email": "{{user_email}}"
  }
}

script:post-response {
  test("Status code is 200", function() {
      expect(res.getStatus()).to.equal(200);
  });

  test("Response body is not empty", function() {
      expect(res.getBody()).to.not.be.empty;
  });
}