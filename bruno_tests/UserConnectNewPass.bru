meta {
  name: UserConnectNewPass
  type: http
  seq: 8
}

post {
  url: {{host}}/auth/login
  body: json
  auth: none
}

body:json {
  {
    "email": "{{user_email}}",
    "password": "{{user_password}}"
  }
}

script:post-response {
  test("Status code is 200 (Login with new password)", function() {
      expect(res.getStatus()).to.equal(200);
  });

  test("Returns correct email", function() {
      expect(res.getBody().email).to.equal(bru.getVar("user_email"));
  });
}